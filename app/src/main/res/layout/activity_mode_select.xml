<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.makeinfo.andenginetemplate.Activities.ModeSelectActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Wybierz tryb"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp" />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:id="@+id/imageButton2"
        android:layout_below="@+id/textView2"
        android:src="@drawable/classic"
        android:scaleType="fitXY"
        android:clickable="true"
        android:nestedScrollingEnabled="false"
        android:onClick="classic"
        android:background="@color/background_floating_material_light" />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:id="@+id/imageButton3"
        android:src="@drawable/mirror"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY"
        android:clickable="true"
        android:onClick="mirror"
        android:background="@color/background_floating_material_light" />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:id="@+id/imageButton4"
        android:src="@drawable/timerace"
        android:layout_below="@+id/imageButton2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:clickable="true"
        android:onClick="timerace"
        android:background="@color/background_floating_material_light" />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:id="@+id/imageButton5"
        android:src="@drawable/snake"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_alignStart="@+id/imageButton3"
        android:scaleType="fitXY"
        android:clickable="true"
        android:onClick="snake"
        android:background="@color/background_floating_material_light" />

</RelativeLayout>
